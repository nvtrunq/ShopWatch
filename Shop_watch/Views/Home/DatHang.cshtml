@model Shop_watch.Models.Don_hang
@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
   .container {
    margin-top: 130px;
}
 .col-left {
    float: left;
}.col-left {
    height: 206px;
}.col-right {
    margin-left: 289px;
}button.btn.btn-default {
    background-color: blue;
    color: white;
}.modal-footer {
    margin-left: -27px;
    width: 527px;
}
    body {
        color:white;
        background-image: url('../../Content/css_web/img/product/hot_deals/gravity_banner.jpg');
    }
</style>
<div class="container">
    @foreach (var item in ViewBag.Ho_ten)
    {
        <div class="col-left">
            <div class="profile"><h3>Thông tin khách hàng</h3></div>
            <ul>
                <li>Họ và tên: @item.Ho_ten</li>
                <li>Địa chỉ: @item.Dia_chi</li>
                <li>Số điện thoại: @item.So_dien_thoai</li>
            </ul>
        </div>
    }
        <div class="col-right">
            <div class="profile"><h3>Thông tin đơn hàng</h3></div>
            <ul>
                <li>Hình ảnh: <img src="@Model.San_pham.Hinh_anh" style="width:80px;height:80px" /></li>
                <li>Số lượng: @Model.So_luong x <b style="color:lightblue">@Model.San_pham.Ten_san_pham</b></li>
                <li>Đơn vị cung cấp: @Model.San_pham.Nguoi_cap_nhat</li>
                <li>Thành tiền: @Model.Thanh_tien đ</li>
            </ul>
        </div>
    
    </div>


