@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id_san_pham)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id_tai_khoan_Kh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Thanh_tien)
        </td>
        <td>
            @if (item.Trang_thai == 2)
            {
                <text>Đang chờ xử lý</text>
            }
            else
            {
                if (item.Trang_thai == 3)
                {
                    <text>Đã xử lý đơn hàng</text>
                }
                else
                {
                    if (item.Trang_thai == 4)
                    {
                        <text>Đang giao hàng</text>
                    }
                }
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.So_luong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngay_tao)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Id_nguoi_cap_nhat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngay_cap_nhat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Chu_thich)
        </td>*@
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.Id_don_hang }) |
