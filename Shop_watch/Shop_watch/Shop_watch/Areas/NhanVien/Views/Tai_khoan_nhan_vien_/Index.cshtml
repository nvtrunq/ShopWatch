@model IEnumerable<Shop_watch.Models.Tai_khoan_Ad>

@{
    ViewBag.Title = "Tài khoản nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<h2>Tài khoản nhân viên</h2>

<p>
    @Html.ActionLink("Thêm tài khoản mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ho_ten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gioi_tinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ngay_sinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dia_chi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.So_dien_thoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hinh_anh)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Nguoi_cap_nhat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ngay_cap_nhat)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.Chu_thich)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Trang_thai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_chuc_vu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mat_khau)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ho_ten)
        </td>
        <td>
            @if(item.Gioi_tinh==1)
            {
                <text>Nam</text>
            }
            else
            {
                <text>Nữ</text>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngay_sinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dia_chi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.So_dien_thoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hinh_anh)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Nguoi_cap_nhat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngay_cap_nhat)
        </td>*@
        @*<td>
            @Html.Raw(item.Chu_thich)
        </td>*@
        <td>
            @if(item.Trang_thai==1)
            {
                <text>Hoạt động</text>
            }
            else
            {
                <text>Không hoạt động</text>
            }
        </td>
        <td>
            @if (item.Id_chuc_vu == 1)
            {
                <text>Giám đốc</text>
            }
            else
            {
                <text>Nhân viên</text>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mat_khau)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.Id_Tai_khoan_ad }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.Id_Tai_khoan_ad }) |
            @Html.ActionLink("Xoá", "Delete", new { id=item.Id_Tai_khoan_ad })
        </td>
    </tr>
}

</table>
